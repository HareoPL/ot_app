{
  "name": "esp32c6matter", // Name of your devcontainer, for easy identification

  // Optional: Build configuration for a custom Dockerfile (commented out)
  // "build": {
  //   "dockerfile": "Dockerfile",
  //   "context": "."
  // },

  "image": "espressif/esp-matter:latest", // Use the official Espressif ESP-Matter Docker image
    // when I was using it the latest version was espressif/esp-matter:latest_idf_v5.4.1 https://hub.docker.com/r/espressif/esp-matter/tags

  "customizations": {
    "vscode": {
      // List of VS Code extensions for C/C++, ESP-IDF, Python, and more
      "extensions": [
        "ms-vscode.cpptools-themes",                              // Adds extra color themes for C/C++ development in VS Code
        "ms-vscode.cpptools",                                     // Official Microsoft C/C++ extension: IntelliSense, debugging, code navigation
        "ms-vscode.cmake-tools",                                  // Integrates CMake: configure, build, test, debug CMake projects
        "twxs.cmake",                                             // Syntax highlighting for CMake files
        "josetr.cmake-language-support-vscode",                   // Advanced language support for CMake (IntelliSense, autocompletion)

        "plorefice.devicetree",                                   // Syntax highlighting and support for Device Tree files (embedded Linux)
        "timonwong.shellcheck",                                   // ShellCheck linter for shell scripts: error checking and suggestions

        "llvm-vs-code-extensions.vscode-clangd",                  // clangd language server for C/C++: code completion, diagnostics, navigation
        "xaver.clang-format",                                     // Format C/C++ code with clang-format

        "ms-python.vscode-pylance",                               // Fast, feature-rich Python language server: IntelliSense, type checking
        "ms-python.python",                                       // Official Python extension: debugging, linting, code navigation
        "ms-python.debugpy",                                      // Python debugger (usually included with Python extension)

        "espressif.esp-idf-extension",                            // ESP-IDF project support: build, flash, debug for ESP chips
        "espressif.esp-idf-web",                                  // Web-based tools and utilities for ESP-IDF development

        "eamodio.gitlens",                                        // Supercharges Git: code authorship, history, and more
        "streetsidesoftware.code-spell-checker",                  // Checks code and docs for spelling mistakes
        "bierner.markdown-preview-github-styles",                 // Enhances Markdown preview to match GitHubâ€™s style
        "yzhang.markdown-all-in-one",                             // Comprehensive Markdown editing support
        "redhat.vscode-yaml",                                     // YAML file support: validation, formatting, schema
        "usernamehw.errorlens"                                    // Highlights errors and warnings inline in code
      ],

      // VS Code workspace/user settings
      "settings": {
        "editor.tabSize": 4,                                      // Set tab size to 4 spaces
        "editor.rulers": [80, 120],                               // Add rulers at columns 80 and 120 for code formatting
        "files.trimTrailingWhitespace": true,                     // Automatically trim trailing whitespace
        "C_Cpp.intelliSenseEngine": "default",                    // Use default IntelliSense engine for C/C++
        "cmake.configureOnOpen": true,                            // Automatically configure CMake projects on open
        "terminal.integrated.defaultProfile.linux": "bash",       // Set bash as default terminal profile
        "terminal.integrated.profiles.linux": {                   // Define terminal profiles
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "/usr/bin/zsh",
            "icon": "terminal-linux"
          }
        }
        // "editor.renderWhitespace": "all",                         // Show all whitespace characters
        // "files.autoSave": "afterDelay",                           // Auto-save files after a short delay
        // "editor.wordWrap": "on",                                  // Enable word wrapping in the editor
        // "espressif.espIdfPath": "/opt/esp/esp-idf",               // Path to ESP-IDF inside the container
        // "espressif.enableIdfMonitor": true,                       // Enable ESP-IDF monitor in the extension
        // "espressif.espAdfPath": null                              // Disable ESP-ADF (if not used)
      }
    }
  },

  // Docker run arguments
  "runArgs": [
    // "--privileged"                                                // Run container in privileged mode (required for flashing ESP chips)
    // ,"--device=/dev/ttyACM0"                                      // Pass a USB device to the container (uncomment to enable)
  ],

  // Mount host folders into the container
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind" // Mount your workspace to /workspace
  ],

  // Commands to run after container creation
  "postCreateCommand": [
    // "pip install -r requirements.txt",                       // Install Python dependencies (uncomment if needed)
    // "cmake -S . -B build"                                    // Build your CMake project (uncomment if needed)
  ],

  // Environment variables inside the container
  "containerEnv": {
    // "IDF_PATH": "/opt/esp/esp-idf", // Path to ESP-IDF
    // "IDF_TOOLS_PATH": "/opt/esp" // Path to ESP tools
  },

  // Run as the 'dev' user inside the container
  // "remoteUser": "dev"
  "shutdownAction": "stopContainer" // What to do when VS Code is closed (uncomment to enable)
}
